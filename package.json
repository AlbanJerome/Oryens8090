{
  "name": "oryens-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:integration": "tsx tests/integration/verify-audit-link.ts && tsx tests/integration/verify-consolidation.ts",
    "test:full": "npm test && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "packageManager": "npm@11.8.0",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "turbo": "^2.8.10",
    "tsx": "^4.19.0"
  }
}
